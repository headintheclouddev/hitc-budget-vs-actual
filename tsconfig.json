{
    "compilerOptions": {
        "module": "amd",
        "target": "es2020",
        "moduleResolution":"node",
        "sourceMap": false,
        "newLine": "LF",
        "noUnusedLocals": true,
        "experimentalDecorators": true,
        "baseUrl": ".",
        "lib": ["es2020", "dom"],
        "paths": {
            "N": ["node_modules/@hitc/netsuite-types/N"],
            "N/*": ["node_modules/@hitc/netsuite-types/N/*"]
        },
        "outDir": "src/FileCabinet/SuiteScripts/"
    },
    "exclude": ["node_modules"],
    "include": ["src/TypeScripts/*"]
}
